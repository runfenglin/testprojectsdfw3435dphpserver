<div id="content">

	<div class="row">
		<big-breadcrumbs icon="group" items="['Trip', 'Group Detail']" class="col-xs-12 col-sm-7 col-md-7 col-lg-4"></big-breadcrumbs>
	</div>
	
	<div class="row">
		<section widget-grid id="widget-grid" class="col-xs-12">
			<div jarvis-widget id="table-hover-states-widget" data-widget-color="greenDark" data-widget-editbutton="false">
				<header>
					<span class="widget-icon"> <i class="fa fa-table"></i> </span>

					<h2>Group Trip Detail</h2>
				</header>
				
				<div>
					<div class="widget-body no-padding">
						
						<div class="table-responsive">
							<div class="clearfix toolbar">
								<div class="col-sm-4 col-xs-12">
									<div class="input-group">
										<span class="input-group-addon input-sm">
											<i class="glyphicon glyphicon-search"></i>
										</span>
										<input type="search" class="form-control input-sm" placeholder ng-model="search">
									</div>
								</div>
								
							</div>
							
							<table class="table table-hover">
								<thead>
									<tr my-sort-columns predicate="predicate" reverse="reverse">
										<th my-sort-by="user.name">Memeber</th>
										<th my-sort-by="role">Role</th>
										

									</tr> 
								</thead>
								<tbody ng-if="trip.group_users.length == 0">
									<tr>
										<td colspan="7">No member is found</td>
									</tr>
								</tbody>
								<tbody ng-if="trip.group_users.length">
									<tr ng-repeat="g in trip.group_users|filter:search|filter:filterTrip()|orderBy:predicate:reverse">
										<td>
											<img data-ng-src="data:image/png;base64,[[g.avatar]]" src="/bundles/admin/images/male.png"/>
											<span>[[g.name]]</span>
										</td>
										<td ng-bind-template="[[g.role]]"></td>
									</tr>
								</tbody>
							</table>

						</div>

					</div>
				</div>
			</div>
		</section>
	</div>
</div>